# Configuration du serveur
PORT=3002
NODE_ENV=development

# Configuration de l'application
APP_NAME=Port de Plaisance de Russell
APP_URL=http://localhost:3002

# Configuration des logs
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Configuration de la pagination
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Configuration du délai d'expiration de session (en millisecondes)
SESSION_EXPIRY=3600000 # 1 heure

# Configuration des emails (optionnel)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASS=votre_mot_de_passe
SMTP_FROM=noreply@port-russell.com

# URL de connexion MongoDB
MONGODB_URI=mongodb://localhost:27017/marina

# Clé secrète pour les sessions
SESSION_SECRET=your_session_secret_here 