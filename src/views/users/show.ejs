<%- include('../layouts/main', { title: 'Détails de l\'Utilisateur' }) %>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">Détails de l'Utilisateur</h2>
                    <div>
                        <a href="/users/<%= user.email %>/edit" class="btn btn-warning">Modifier</a>
                        <form action="/users/<%= user.email %>?_method=DELETE" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?')">Supprimer</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Nom d'utilisateur</dt>
                    <dd class="col-sm-8"><%= user.username %></dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8"><%= user.email %></dd>

                    <dt class="col-sm-4">Créé le</dt>
                    <dd class="col-sm-8"><%= new Date(user.createdAt).toLocaleString('fr-FR') %></dd>

                    <dt class="col-sm-4">Dernière mise à jour</dt>
                    <dd class="col-sm-8"><%= new Date(user.updatedAt).toLocaleString('fr-FR') %></dd>
                </dl>
            </div>
            <div class="card-footer">
                <a href="/users" class="btn btn-secondary">Retour à la liste</a>
            </div>
        </div>
    </div>
</div> 