<div class="container text-center py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="error-template">
                <h1 class="display-1">Erreur</h1>
                <h2 class="mb-4"><%= message || "Une erreur est survenue" %></h2>
                <div class="error-details mb-4">
                    Nous sommes désolés, mais une erreur s'est produite lors du traitement de votre demande.
                    <% if (process.env.NODE_ENV === 'development' && locals.error) { %>
                        <div class="alert alert-danger mt-3">
                            <pre class="mb-0"><%= error.stack %></pre>
                        </div>
                    <% } %>
                </div>
                <div class="error-actions">
                    <a href="/" class="btn btn-primary">
                        <i class="bi bi-house-door"></i> Retour à l'accueil
                    </a>
                    <a href="javascript:history.back()" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Page précédente
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.error-template {
    padding: 40px 15px;
}
.error-actions {
    margin-top: 15px;
    margin-bottom: 15px;
}
.error-actions .btn {
    margin-right: 10px;
}
pre {
    white-space: pre-wrap;
    word-wrap: break-word;
}
</style> 